{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
